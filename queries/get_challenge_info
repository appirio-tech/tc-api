select
    (NVL(ppvs.value, 'false') = 'true') as show_submissions,
    (NVL(ppvc.value, 'false') = 'true') as show_coder,
    NVL(sc.min_score, 1000) AS pass_review_score,
    CASE WHEN (p.project_studio_spec_id IS NOT NULL) THEN 1 ELSE 0 END AS is_studio
from project p
left join project_info ppvs ON p.project_id = ppvs.project_id AND ppvs.project_info_type_id = 53
left join project_info ppvc ON p.project_id = ppvc.project_id AND ppvc.project_info_type_id = 54
LEFT JOIN project_phase pp4 ON p.project_id = pp4.project_id AND pp4.phase_type_id = 4
LEFT JOIN phase_criteria pc4 ON pp4.project_phase_id = pc4.project_phase_id AND pc4.phase_criteria_type_id = 1
LEFT JOIN scorecard sc ON sc.scorecard_id ||'' = pc4.parameter
where p.project_id = 2001;
